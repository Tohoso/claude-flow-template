{
  "$schema": "https://raw.githubusercontent.com/ruvnet/claude-flow/main/schemas/config.schema.json",
  "version": "2.0.0",
  "project": {
    "name": "${PROJECT_NAME}",
    "description": "${PROJECT_DESCRIPTION}",
    "type": "application"
  },
  "swarm": {
    "defaultStrategy": "parallel",
    "maxAgents": 10,
    "timeout": 300000,
    "retryAttempts": 3,
    "topologies": {
      "default": "hierarchical",
      "review": "mesh",
      "development": "star"
    }
  },
  "agents": {
    "default": [
      "planner",
      "architect",
      "coder",
      "tester",
      "reviewer"
    ],
    "review": [
      "security-auditor",
      "performance-analyst",
      "code-reviewer"
    ],
    "development": [
      "planner",
      "coder",
      "tester"
    ]
  },
  "memory": {
    "backend": "sqlite",
    "path": ".swarm/memory.db",
    "namespaces": {
      "project": "project-context",
      "tasks": "task-history",
      "decisions": "architectural-decisions"
    }
  },
  "verification": {
    "enabled": true,
    "threshold": 0.95,
    "autoRollback": true
  },
  "hooks": {
    "preTask": [],
    "postTask": [],
    "onError": []
  },
  "output": {
    "format": "json",
    "directory": ".swarm/output",
    "preserveHistory": true
  },
  "github": {
    "autoCreatePR": true,
    "baseBranch": "develop",
    "branchPrefix": "feature/",
    "labels": {
      "autoDevelop": "auto-develop",
      "autoGenerated": "auto-generated",
      "needsReview": "needs-review"
    }
  }
}
